@{
    ViewData["Title"] = "Home Page";
}
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Mvc
@inject IHttpContextAccessor HttpContextAccessor

<br />
@if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("uid")))
{

    <div class="text-center">
        <h1>Welcome Back @HttpContextAccessor.HttpContext.Session.GetString("fn")  @HttpContextAccessor.HttpContext.Session.GetString("ln")</h1>
    </div>

    <hr />
    <br />
}
else
{
    <div class="text-center">
        <h1 class="display-4">File Center</h1>

    </div>
}
<!--Large Screen-->
<div class="d-none d-sm-block">

    <div class="ui three column grid">
        <div class="column ">
            <div class="ui segment bg-primary">
                <h1><b>Total Users</b></h1>
                <div style="text-align: right; font-size: xx-large; font-weight: bold">@ViewBag.Totaluser</div>
            </div>

        </div>
        <div class="column ">
            <div class="ui segment bg-danger">
                <h1><b>Total Files</b></h1>
                <div style="text-align: right; font-size: xx-large; font-weight: bold ">@ViewBag.TotalFiles</div>
            </div>

        </div>
        <div class="column ">
            <div class="ui segment bg-success">
                <h1><b>Total Blob</b></h1>
                <div style="text-align: right; font-size: xx-large; font-weight: bold">@ViewBag.TotalBlobs</div>
            </div>

        </div>
    </div>
    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext.Session.GetString("uid")))
{
    <h1><b>My Storage</b></h1>
    <hr />
