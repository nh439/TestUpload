<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<center>
    <h1><b>Change Password</b></h1>
</center>
<br />
<form method="post">
    <div class="form-group">
        <label for="Old">Old Password</label>
        <input id="Old" name="Old" type="password" class="form-control">
    </div>
    <div class="form-group">
        <label for="new">New Password</label>
        <input id="new" name="new" type="password" class="form-control" onchange="passcheck()">
    </div>
    <div class="form-group">
        <label for="ret">Retype Password</label>
        <input id="ret" name="ret" type="password" class="form-control" onchange="passcheck()">
        <div class="col-10" style="display: none" id="ms1">
            <small style="color:red">Confirm Password Incorrect</small>
        </div>
    </div>
    <center>
        <div class="form-group">
            <button disabled id="submit" name="submit" type="submit" class="btn btn-primary">Change Password</button>
        </div>
    </center>
</form>
<script>
    function passcheck() {
        var i = document.getElementById('new').value;
        var j = document.getElementById('ret').value;
        if (i === j) {
            document.getElementById('ms1').style.display = " none";
            document.getElementById('submit').disabled = false;
        }
        else {
            document.getElementById('ms1').style.display = " block";
            document.getElementById('submit').disabled = true;
        }
    }

</script>

